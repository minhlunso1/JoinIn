<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_origin1</item>
        <item name="colorPrimaryDark">@color/colorPrimary_origin1</item>
        <item name="colorAccent">@color/colorPrimary_origin2</item>
        <item name="colorControlNormal">@color/colorPrimary_origin2</item>
        <item name="colorControlActivated">@color/colorPrimary_origin1</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:dialogTheme">@style/Theme.MyDialog</item>-->

    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- android:actionMenuTextColor is the color of the text of action (menu) items  -->
        <item name="actionMenuTextColor">@android:color/white</item>
        <!-- Enable these below if you want clicking icons to trigger a ripple effect -->
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
    </style>

    <!--<style name="Theme.MyDialog" parent="Theme.AppCompat.Light.Dialog">-->
        <!--<item name="android:textColor">@android:color/white</item>-->
        <!--<item name="android:textColorPrimary">@android:color/white</item>-->
        <!--<item name="colorAccent">@android:color/white</item>-->
        <!--<item name="android:windowBackground">@drawable/main_color</item>-->
        <!--<item name="android:textSize">18sp</item>-->
    <!--</style>-->

    <style name="Theme.MyDialog2" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="GenderSpinner" parent="Material.Widget.Spinner">
        <item name="spn_labelEnable">false</item>
        <item name="spn_labelPadding">0dp</item>
        <item name="spn_labelTextAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="spn_labelTextColor">@android:color/primary_text_light</item>
        <item name="spn_labelEllipsize">end</item>
        <item name="spn_dividerHeight">2dp</item>
        <item name="spn_dividerPadding">0dp</item>
        <item name="spn_dividerAnimDuration">@android:integer/config_shortAnimTime</item>
        <item name="spn_arrowColor">?attr/colorControlNormal</item>
        <item name="spn_arrowSize">4dp</item>
        <item name="spn_arrowPadding">8dp</item>
        <item name="spn_popupItemAnimation">@anim/abc_slide_in_bottom</item>
        <item name="spn_popupItemAnimOffset">120</item>
    </style>
</resources>