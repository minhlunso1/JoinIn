<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".vc.activity.BroadcastMeActivity">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/pin_animation"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/pin_animation"
        android:src="@drawable/pin_animation" />

    <TextView
        android:id="@+id/tv_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tv_broadcast"
        android:layout_marginBottom="52dp"
        android:layout_centerInParent="true"
        android:text="@string/you_need_to_find_people_nwe_need_your_current_location_to_help_you_find_friends"/>
    <TextView
        android:id="@+id/tv_broadcast"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="52dp"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/tv_instruction"
        android:layout_alignRight="@+id/tv_instruction"
        android:gravity="center"
        android:background="@drawable/cb_state_button_broadcast"
        android:clickable="true"
        android:text="@string/go_online"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="visible" />

</RelativeLayout>
